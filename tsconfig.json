{
    "compilerOptions": {
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es2015", "es6", "es2017"],
        "pretty": true,
        "keyofStringsOnly": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
